@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Category cat in Model)
        {
            <tr>
                <td width="50%">
                    @cat.Name
                </td>
                <td width="30%">
                    @cat.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>

